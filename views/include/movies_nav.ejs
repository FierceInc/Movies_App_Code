<!DOCTYPE html>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-black">
    <div class="container-fluid ">
      <h1 id="Logo"><a class="navbar-brand" href="/movies/1">Home of Movies</a></h1>
     
      <button class="button" data-bs-toggle="collapse" data-bs-target="#dropdown" aria-controls="dropdwon" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fa fa-bars" aria-hidden="true"></i>
      </button>
      <div class="collapse navbar-collapse" id="dropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link " aria-current="" href="/movies/1"> <i class="fa fa-home nav-icons" aria-hidden="true"></i> <span class="nav-bar-span">Home</span> </a>
            </li>


            <li class="nav-item dropdown">
              <div class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
               <i class="fa fa-calendar nav-icons" aria-hidden="true"></i> <span class="nav-bar-span">Year</span> 
              </div>
              <ul id="years-list" class="dropdown-menu mb-2" aria-labelledby="navbarDropdownMenuLink">
                <div class="years">
                  <li><a class="dropdown-item" href="<%= `/movies/year/2012/${1}` %> ">2012</a></li>
                  <li><a class="dropdown-item" href="<%= `/movies/year/2013/${1}` %> ">2013</a></li>
                  <li><a class="dropdown-item" href="<%= `/movies/year/2014/${1}` %> ">2014</a></li>
                  <li><a class="dropdown-item" href="<%=`/movies/year/2015/${1}` %> ">2015</a></li>
                  <li><a class="dropdown-item" href="<%= `/movies/year/2016/${1}` %> ">2016</a></li>
                  <li><a class="dropdown-item" href="<%= `/movies/year/2017/${1}` %> ">2017</a></li>
                  <li><a class="dropdown-item" href="<%= `/movies/year/2018/${1}` %> ">2018</a></li>
                  <li><a class="dropdown-item" href="<%= `/movies/year/2019/${1}` %> ">2019</a></li>
                  <li><a class="dropdown-item" href="<%= `/movies/year/2020/${1}` %> ">2020</a></li>
                  <li><a class="dropdown-item" href="<%= `/movies/year/2021/${1}` %> ">2021</a></li>
                 
                </div>
              </ul> 
            </li>
          <li class="nav-item dropdown">
            <div class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-tape nav-icons"></i> <span class="nav-bar-span">Genre</span> 
            </div>
            <ul id="genre-list" class="dropdown-menu mb-2" aria-labelledby="navbarDropdownMenuLink">
              <div id="genres">
                <% if(genre != undefined) {%> 
                <% genre.forEach(genre => { %>
                    <li ><a class="dropdown-item" href="<%= `/movies/genres/${genre.name.toLowerCase()}/${1}`%>" ><%= genre.name %> </a></li> 
               <% }); %> 
               <% }%> 
              </div>
            </ul> 
          </li>
               <li class="nav-item dropdown">
                <div class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fas fa-film nav-icons"></i> <span class="nav-bar-span">Trending</span> 
                </div>
                <ul id="genre-list" class="dropdown-menu mb-2" aria-labelledby="navbarDropdownMenuLink">
                  <div class="trending">
                    <a class="dropdown-item" href="/movies/film/top-rated/">Top Rated</a>
                    <a class="dropdown-item" href="/movies/film/now-playing/">Playing Now</a>
                    <a class="dropdown-item" href="<%="/movies/film/trending-today" %>" >Trending Today</a>
                    <a class="dropdown-item" href="<%= "/movies/film/trending-this-week" %>"  >Trending This Week</a>
              
                  </div>
                </ul>
              </li>
           
              </div>
             
              </div>
              <div class="header-btns">
                <form autocomplete="off" id="form" onsubmit="sendSearch()">
             <input type="text" name="text" placeholder="Search Movie" required>
             <button type="submit" id="search-icon" ><i class="fa fa-search" aria-hidden="true"></i></button>
             </form>
           </div>
         
    </div>
  </nav>
    <script>
     function sendSearch() {
      var src = "/movies/film/search/q=" + document.getElementsByName("text")[0].value.toLowerCase().replace(/[\s]/g, "-") + "/"  + 1;
      document.getElementById("form").action = src;
      return false;
    }
    </script>
</body>
</html>

